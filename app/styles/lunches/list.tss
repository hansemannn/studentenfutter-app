'#window[platform=ios]': {
    extendEdges: [Ti.UI.EXTEND_EDGE_TOP],
    translucent: true
}

'#leftButton': {
    image: 'images/icons/leftArrow.png'
}

'#rightButton': {
    image: 'images/icons/rightArrow.png'
}

'#listView': {
    listSeparatorInsets: {
        left: 72
    },
    bottom : 44,
}

'#listView[platform=ios]':{
    style: Ti.UI.iOS.ListViewStyle.GROUPED,
    footerTitle: ''
}

'#listView[platform=android]':{
  separatorColor: '#eee'
}

'#refresh[platform=ios]': {
    tintColor: Alloy.Globals.listRefreshTintColor
}

'.cell': {
    height: Ti.UI.SIZE,
}

'.titleView': {
    left: 70,
    right: 40,
    height: Ti.UI.SIZE,
    layout: 'vertical',
    top: 8,
    bottom: 4
}

'.titleView[platform=android]': {
    top: 12
}

'.titleInnerView': {
    left: 2,
    height: Ti.UI.SIZE,
    layout: 'vertical'
}

'.title': {
    height: Ti.UI.SIZE,
    right: 40,
    font: {
        fontSize: 14
    },
    color: '#606366',
    text: 'Spaghetti'
}

'.priceView': {
    left: 0,
    width: 55,
    height: 40
}

'.priceInnerView': {
    width: 40,
    height: 40,
    zIndex: 8888,
    left: 15,
    backgroundImage: '/images/priceBg.png'
}

'.price': {
    zIndex: 9999,
    color: '#FFFFFF',
    width: 40,
    textAlign: Ti.UI.TEXT_ALIGNMENT_CENTER,
    font: {
        fontSize: 12
    },
    text: '2.99'
}

'.countView': {
    height: 18,
    width: 18,
    left: 5,
    zIndex: 9000,
    visible: false,
    top: 0,
    backgroundColor: '#96e0f8',
    borderRadius: 9
}

'.count': {
    textAlign: Ti.UI.TEXT_ALIGNMENT_CENTER,
    color: '#fff',
    font: {
        fontSize: 9,
        fontWeight: 'bold'
    }
}

'.button': {
    right: 0,
    zIndex: 9999,
    tintColor: '#a4a4a4',
    width: 50,
    height: 50,
    bubbleParent: false
}

'.button[platform=android]': {
    right: 10
}

'.buttonRemove[platform=android]': {
    right: 40
}

'.buttonAdd': {
    image: '/images/icons/addIcon.png'
}

'.buttonRemove': {
    image: '/images/icons/subIcon.png',
    right: 30
}

'.ratingView': {
    top: 2,
    bottom: 0,
    left: 0,
    height: 28,
    layout: 'horizontal'
}

'.additives': {
    left : 4,
    right : 5,
    height: Ti.UI.SIZE,
    font : {
        fontSize : 8
    },
    color : '#de9855',
    width: Ti.UI.FILL
}

'.starsOutterView': {
    height: Ti.UI.SIZE,
    width: Ti.UI.SIZE,
    layout: 'horizontal',
    top: 2
}

'.starsInnerView': {
    left: 0,
    height: 10,
    width: Ti.UI.SIZE
}

'.stars': {
    left: 2,
    width: 48,
    height: 10
}

'.numberOfRatingsView': {
    left: 6,
    width: 100, // Could Ti.UI.SIZE this, but this keeps the performance up
    top: 1,
    layout: 'horizontal',
    height: 10
}

'.l1': {
    color: '#6b6b6b',
    left: 0,
    top: 0,
    font: {
        fontSize: 8
    }
}

'.img1': {
    width: 6,
    height: 6,
    left: 0,
    image:  '/images/icons/numberOfRatingsStar.png'
}

'.l2': {
    color: '#6b6b6b',
    left: 3,
    top: 0,
    font: {
        fontSize: 8
    }
}

'.img2': {
    width: 6,
    height: 6,
    left: 0,
    image:  '/images/icons/numberOfRatingsPerson.png'
}
